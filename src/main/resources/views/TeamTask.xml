<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_8.0.xsd">

  <form name="team-task-form" id="studio-team-task-form" title="Task"
    model="com.axelor.team.db.TeamTask" extension="true">
    <extend target="//field[@name='relatedModel']">
      <insert position="after">
        <field name="role"/>
      </insert>
    </extend>
    <extend target="//field[@name='description']">
      <attribute name="widget" value="html"/>
    </extend>
  </form>

</object-views>
