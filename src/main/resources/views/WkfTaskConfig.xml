<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_7.2.xsd">

  <grid name="wkf-task-config-grid" title="Wkf task config"
    model="com.axelor.studio.db.WkfTaskConfig" editable="true">
    <field name="name"/>
    <field name="description"/>
    <field name="expression"/>
    <field name="button"/>
    <field name="messages"/>
  </grid>

  <form name="wkf-task-config-form" title="Wkf task config"
    model="com.axelor.studio.db.WkfTaskConfig" width="large">
    <panel name="mainPanel" colSpan="12">
      <field name="name"/>
      <field name="description"/>
      <field name="expression"/>
      <field name="button"/>
      <field name="messages"/>
      <panel title="Task/Email" colSpan="12">
        <field name="createTask"/>
        <field name="role"/>
        <field name="taskEmailTitle"/>
        <field name="userPath"/>
        <field name="deadlineFieldPath"/>
        <field name="notificationEmail"/>
        <field name="emailEvent"/>
        <field name="modelName"/>
        <field name="jsonModelName"/>
        <field name="defaultForm"/>
        <field name="processId"/>
        <field name="displayStatus"/>
        <field name="displayOnModels"/>
        <field name="templateName"/>
        <field name="callModel"/>
        <field name="callLink"/>
        <field name="callCondition"/>
      </panel>
    </panel>
  </form>


</object-views>
