<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <grid name="link-script-grid" title="LinkScript" model="com.axelor.studio.db.LinkScript">
    <field name="name"/>
    <field name="priority"/>
    <field name="transactional"/>
    <button name="testBtn" icon="play" onClick="save,action-link-script-view-open-test-popup"/>
  </grid>

  <form name="link-script-form" title="LinkScript" model="com.axelor.studio.db.LinkScript"
    onNew="action-link-script-attrs-focus-arcs-panel"
    onLoad="action-link-script-attrs-focus-arcs-panel" width="large">

    <toolbar>
      <button name="testBtn" title="Test" icon="play"
        onClick="save,action-link-script-view-open-test-popup"/>
    </toolbar>

    <panel name="mainPanel">
      <field name="name"/>
      <field name="transactional" widget="BooleanSwitch"/>
      <field name="description" widget="html" colSpan="12"/>
    </panel>

    <panel-related field="arcs" grid-view="link-script-arc-grid"
      form-view="link-script-arc-form"/>

    <panel-related field="inParams" grid-view="link-script-param-grid"
      form-view="link-script-param-form" sidebar="true"/>
    <panel-related field="outParams" grid-view="link-script-param-grid"
      form-view="link-script-param-form" sidebar="true"/>

    <panel name="bodyPanel" title="Body"
      help="LinkScript body contains implicit return statement that build a map of output parameter names bound to same name variables. So make sure you've declared each output parameters as variables. Also, if you add early returns, make sure to build this map yourself to successfully pass variables to next LinkScripts.">
      <field name="body" showTitle="false" colSpan="12" widget="code-editor"
        x-code-syntax="java" height="500"/>
    </panel>

    <panel-mail name="mailPanel">
      <mail-messages limit="4"/>
      <mail-followers/>
    </panel-mail>

  </form>

  <action-attrs name="action-link-script-attrs-focus-arcs-panel">
    <attribute for="arcs" name="active" expr="eval: id"/>
    <attribute for="bodyPanel" name="active" expr="eval: !id"/>
  </action-attrs>

  <action-view name="action-link-script-view-open-test-popup" title="Test LinkScript"
    model="com.axelor.utils.db.Wizard">
    <view type="form" name="link-script-test-form"/>
    <view-param name="popup" value="true"/>
    <view-param name="show-toolbar" value="false"/>
    <view-param name="show-confirm" value="false"/>
    <view-param name="popup-save" value="false"/>
    <context name="linkScriptName" expr="eval: name"/>
    <context name="params" expr="eval: inParams.collect{it.name}"/>
  </action-view>

  <form title="Test LinkScript" name="link-script-test-form" model="com.axelor.utils.db.Wizard"
    onNew="action-link-script-attrs-load-data">
    <panel>
      <field name="bindings" showTitle="false" x-dirty="false" colSpan="12"
        type="many-to-many" target="com.axelor.studio.db.LinkScriptBinding" canNew="false"
        canRemove="false" canSelect="false">
        <editor>
          <field name="parameter" readonly="true"/>
          <field name="expression" height="1"/>
        </editor>
      </field>
      <button name="testBtn" title="Test" icon="play"
        onClick="action.link.script.method.test" colOffset="6"/>
    </panel>
  </form>

  <action-attrs name="action-link-script-attrs-load-data">
    <attribute for="bindings" name="value"
      expr="eval: params.collect{new com.axelor.studio.db.LinkScriptBinding(it, null)}"/>
  </action-attrs>

  <action-method name="action.link.script.method.test">
    <call class="com.axelor.studio.web.LinkScriptController" method="run"/>
  </action-method>

</object-views>
